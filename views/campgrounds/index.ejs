<div class="row">
<% camps.forEach(function(camp){ %>
<div class="col-lg-3 col-md-4 col-sm-6">
    <div class="card text-white bg-dark  mb-1" style="margin-top:10px;">
<img src="<%=camp.image%>" alt="" height="100%" width="100%" ">
<div class="card-body">
    <p class="card-text"><strong><%=camp.name%></strong></p>
    <a href="/campgrounds/<%=camp._id%>" class="btn btn-outline-light btn-sm">Show More</a>
  </div>
</div>
</div>
<%})%>
</div>  
</div>


